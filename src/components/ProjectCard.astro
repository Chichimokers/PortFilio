---
const { title, description, link, tech } = Astro.props;
---
<div class="bg-gray-900 p-6 rounded-lg border border-green-500 hover:border-pink-500 transition-all crt-effect text-center">
  <h3 class="text-xl mb-2 retro-subtitle">{title}</h3>
  <p class="mb-4 text-sm">{description}</p>
  <div class="flex flex-wrap justify-center gap-2 mb-4">
    {tech.map(t => (
      <span class="bg-green-900 px-2 py-1 rounded text-xs">{t}</span>
    ))}
  </div>
  <a href={link} class="text-pink-500 hover:underline flex items-center justify-center gap-2">
    <i class="fa-solid fa-link"></i> Visitar
  </a>
</div>
